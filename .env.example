# TAK Server Environment Configuration

# Server Port
PORT=3000

# Database
DATABASE_URL=sqlite.db

# Node Environment
NODE_ENV=development

# MCP Adapter Mode
# Options: "mock" (development) or "ton" (production)
MCP_MODE=mock

# TON Configuration (required when MCP_MODE=ton)
# TON_RPC_URL=https://toncenter.com/api/v2/jsonRPC
# TON_API_KEY=your_api_key_here
# TON_WALLET_ADDRESS=your_wallet_address

# Logging
LOG_LEVEL=info

# API Versioning
API_VERSION=v0.1
